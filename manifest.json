{
    "manifest_version": 3,
    "name": "Miniblox Rainbow Sphere",
    "version": "1.4",
    "description": "Injects a pixelated rainbow sphere and text into Miniblox.io",
    "content_scripts": [
        {
            "matches": ["https://miniblox.io/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        {
            "resources": ["https://unpkg.com/three@0.134.0/build/three.min.js"],
            "matches": ["https://miniblox.io/*"]
        }
    ]
}
