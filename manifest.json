{
    "manifest_version": 3,
    "name": "Miniblox RGB Sphere",
    "version": "1.0",
    "description": "Injects a black background and RGB glowing sphere into Miniblox.io",
    "content_scripts": [
        {
            "matches": ["https://miniblox.io/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        {
            "resources": ["https://cdn.jsdelivr.net/npm/three@0.134.0/build/three.min.js"],
            "matches": ["https://miniblox.io/*"]
        }
    ]
}
