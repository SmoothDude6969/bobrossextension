{
  "manifest_version": 3,
  "name": "Rainbow Sphere Overlay",
  "version": "1.3",
  "description": "Displays a rainbow glowing sphere with text overlay on miniblox.io",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://miniblox.io/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
